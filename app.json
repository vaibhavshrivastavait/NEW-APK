{
  "expo": {
    "name": "MHT Assessment",
    "slug": "mht-assessment",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "platforms": ["ios", "android"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mht.assessment",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app may use camera for document scanning (optional feature)",
        "NSPhotoLibraryUsageDescription": "This app may access photo library for importing images (optional feature)"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mht.assessment",
      "versionCode": 1,
      "permissions": [],
      "allowBackup": false,
      "supportsRtl": false,
      "installLocation": "auto",
      "largeHeap": true,
      "screenOrientation": "default",
      "resizeableActivity": true,
      "supportsPictureInPicture": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "*.mht-assessment.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "scheme": "mht-assessment"
  }
}